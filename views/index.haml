%div#app
  %h1 Hanchan Database
  %form{ action: "search", method: "GET" }
    %ul
      %hanchan-input{:"v-for" => "specifier in specifiers", 
        :"v-bind:item" => "specifier",
        :"v-bind:key" => "specifier.id",
        :"v-on:remove" => "removeSpecifier",
      }
      %button{ type: "button", :"v-on:click" => "addSpecifier"}
        Add Specifier
    %input{ type: "submit" }
